<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewDNI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduzca su DNI:"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextDNI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDNI"
        android:layout_marginTop="8dp"
        android:inputType="text"
        android:hint="DNI"/>

    <Button
        android:id="@+id/buttonGuardarCita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedir Cita"
        android:layout_below="@id/editTextDNI"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/imageViewCheck"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:src="@drawable/check"/>

    <TextView
        android:id="@+id/textViewCitaGuardada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Su cita se ha guardado satisfactoriamente."
        android:layout_below="@id/imageViewCheck"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

</RelativeLayout>
